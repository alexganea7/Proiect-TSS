pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'g++ -o tests tests.cpp /lib/libgtest.a --coverage'
            }
        }
        stage('Test') {
            steps {
                sh './tests'
            }
        }
        stage('Code Coverage') {
            steps {
                sh 'lcov --capture --directory . --output-file coverage_output'
                sh 'genhtml -s coverage_output --branch-coverage --highlight --legend --output-directory html'
            }
            post {
                always {
                    echo 'Code coverage report available at: ${env.WORKSPACE}/coverage-report/index.html'
                }
            }
        }
    }
}
